set hinttimeout=500 defsearch=google
set nextpattern+=\\bsuivant
set previouspattern+=\\bprécédent

nnoremap d <C-W>
nnoremap e <C-S-E>
nnoremap h H
nnoremap j 8j
nnoremap k 8k
nnoremap l L
cnoremap <C-J> <Tab>
cnoremap <C-K> <S-Tab>
nnoremap <C-Q> <Nop>

nnoremap gy gT
nnoremap A '
nnoremap AY :b ▶<CR>
nnoremap AT :b tweetdeck<CR>
nnoremap AM :b mail<CR>

nnoremap H 10h
nnoremap L 10l

" Standard shortcuts
inoremap <C-B> <Left>
inoremap <C-F> <Right>
cnoremap <C-B> <Left>
cnoremap <C-F> <Right>

" Scroll more
nnoremap <Down> 8j
nnoremap <Up> 8k
cnoremap <C-N> <Down>
cnoremap <C-P> <Up>
nnoremap <C-J> <PageDown>
nnoremap <C-K> <PageUp>

" Special
nnoremap <silent> Y :!yt (xsel) &<CR>

" Autohide statusbar
js var bb = document.getElementById('liberator-bottombar');
js bb.style.overflow = 'hidden';
js function show_bottombar(on) { bb.style.height = on ? '' : '0' }
js function map(c) { liberator.execute('nnoremap ' + c + ' :js show_bottombar(1)<CR>' + c) }
js ":boOtT/?".split('').forEach(map)
js show_bottombar();
cnoremap <CR> <CR>:js show_bottombar()<CR>
cnoremap <Esc> <Esc>:js show_bottombar()<CR>
