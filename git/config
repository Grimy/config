[push]
	default = current

[pull]
	rebase = true

[color]
	ui = auto

[diff]
	tool = vimdiff
	algorithm = patience
	renames = true

[difftool]
	prompt = false

[interactive]
	singlekey = true

[advice]
	pushNonFastForward = false
	statusHints = false
	detachedHead = false

[status]
	short = true
	branch = true

[credential]
	helper = cache --timeout=18000 --socket="$XDG_RUNTIME_DIR/git-credential.socket"

[lfs]
	batch = false

[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
