[push]
	default = current

[pull]
	rebase = true

[user]
	name = Victor Adam

[diff]
	tool = vimdiff
	algorithm = patience
	renames = true

[difftool]
	prompt = false

[difftool "vimdiff"]
	cmd = vim -d $REMOTE $LOCAL

[core]
	editor = nvim
	pager = less

[interactive]
	singlekey = true

[advice]
	pushNonFastForward = false
	statusHints = false
	detachedHead = false

[status]
	short = true
	branch = true

[merge]
	ff = false

[rerere]
	enabled = 1

[credential]
	helper = cache --timeout=18000 --socket="$XDG_RUNTIME_DIR/git-credential.socket"

[lfs]
	batch = false

[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
