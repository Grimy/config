[user]
	name = Victor Adam

[push]
	default = current

[pull]
	rebase = true

[rebase]
	autoStash = true

[color]
	ui = auto

[merge]
	tool = vim

[mergetool.vim]
	cmd = vim -NOdu $XDG_CONFIG_HOME/vim/init.vim "$MERGED" "$BASE"
	trustExitCode = true

[interactive]
	singlekey = true

[advice]
	pushNonFastForward = false
	statusHints = false
	detachedHead = false

[status]
	short = true
	branch = true

[credential]
	helper = cache --timeout=18000 --socket="$XDG_RUNTIME_DIR/git-credential.socket"

[lfs]
	batch = false

[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
