" Clean useless visual clutter
set guioptions=bC
set showtabline=never

" Timeouts
set scrolltime=0
set hinttimeout=500

" Sensible defaults
set editor=vim\ -g\ --remote-tab-wait-silent
set defsearch=google

" Same custom mappings as in Vim
nmap -builtin <C-S> <C-A>
nmap -builtin !q <C-W>
nmap -builtin gy gT

" Go back to the previously selected tab when closing
nmap -builtin d <C-W>

" Marks
nmap -builtin A '

" Disable annoying mappings
map -builtin -modes=normal,visual,input,command <C-Q> <Nop>
imap -builtin <C-Z> <C-V><C-Z>
imap -builtin <C-V> <C-V><C-V>
nmap -builtin <Insert> <Nop>
nmap -builtin gf <Nop>
nmap -builtin gh <Nop>

" Panorama is awesome
nmap -builtin e <C-S-E>

" French localization
cmap -modes hints \& 1
cmap -modes hints \é 2
cmap -modes hints \" 3
cmap -modes hints \' 4
cmap -modes hints \( 5
cmap -modes hints \- 6
cmap -modes hints \è 7
cmap -modes hints \_ 8
cmap -modes hints \ç 9
cmap -modes hints \à 0
nmap -builtin (j <C-O>
nmap -builtin )j <C-I>
nmap -builtin (f [f
nmap -builtin )f ]f
nmap -builtin )) ]]
nmap -builtin (( [[
set nextpattern+=\\bsuivant
set previouspattern+=\\bprécédent

" Horizontal scrolling? Why?
nmap -builtin h H
nmap -builtin l L
nmap -builtin H 10h
nmap -builtin L 10l

" Standard shortcuts
imap -builtin <C-B> <Left>
imap -builtin <C-F> <Right>
cmap -builtin <C-B> <Left>
cmap -builtin <C-F> <Right>

" Completion
cmap -builtin <C-J> <Tab>
cmap -builtin <C-K> <S-Tab>

" Scroll more
nmap -builtin j 8j
nmap -builtin k 8k
nmap -builtin <Down> 8j
nmap -builtin <Up> 8k
cmap -builtin <C-N> <Down>
cmap -builtin <C-P> <Up>
nmap -builtin <C-J> <PageDown>
nmap -builtin <C-K> <PageUp>

" Special
nmap -builtin <silent> Y :!yt (xsel) &<CR>
nmap -builtin zo fdow<CR>
nmap -builtin zp y:<S-Insert><C-Left><Left><C-U>saveas ~/p0/

" Custom styles
autocmd!
autocmd PageLoad fimfiction.net/story js content.window.document.getElementById('chapter_container').style.textAlign = 'left'
autocmd PageLoad fimfiction.net/story js content.window.document.getElementById('chapter_container').style.maxWidth = '51em'
