[alias]
g = log --graph --oneline --decorate --all --date-order
stat = show --oneline --stat
orig = remote show origin
fuck = reset --hard
pull = pull --verbose --rebase

[push]
default = current

[user]
name = Victor Adam
email = Victor.Adam@derpymail.org

[diff]
tool = vimdiff
algorithm = patience

[difftool]
prompt = false

[difftool "vimdiff"]
cmd = vim -d $REMOTE $LOCAL

[core]
editor = vim
pager = less

[interactive]
singlekey = true

[branch]
autosetuprebase = always

[advice]
pushNonFastForward = false
statusHints = false
detachedHead = false

[merge]
tool = gvimdiff
