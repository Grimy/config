#!/usr/bin/perl -w

use strict;
use Convert::Color::HUSL;

sub hsl2rgb { map { 256 * $_ } Convert::Color::HUSL->new(@_)->rgb }

printf "*%s: #%02x%02x%02x\n", shift @$_, hsl2rgb(@$_) for
	[background => 270, 11,  7],
	[color0     => 270, 11,  7],   # Black   Background
	[color1     =>   0, 99, 61],   # Red     Error
	[color2     => 120, 99, 61],   # Green   --
	[color3     =>  60, 99, 61],   # Brown   --
	[color4     => 210, 99, 61],   # Azure   --
	[color5     => 330, 99, 61],   # Pink    --
	[color6     => 150, 99, 61],   # Spring  --
	[color7     => 300, 11, 16],   # Dark    Cursorline
	[color8     => 240, 11, 61],   # Gray    Comments
	[color9     =>  30, 99, 61],   # Orange  Todo
	[color10    => 120, 99, 81],   # Green   Menus
	[color11    =>  60, 99, 81],   # Yellow  Keywords
	[color12    => 240, 99, 81],   # Blue    String
	[color13    => 270, 99, 61],   # Violet  PreProc
	[color14    => 180, 99, 81],   # Cyan    --
	[color15    => 300, 11, 96],   # White   Foreground
	[foreground => 300, 11, 96];

print <<'END';
#if X_RESOLUTION < 3600
URxvt.font: xft:Hack:size=12
#else
URxvt.font: xft:Hack:size=11
#endif
URxvt.scrollBar: false
URxvt.saveLines: 4096
URxvt.keysym.C-BackSpace: \027
URxvt.keysym.C-Delete: \033[3;5~
URxvt.keysym.C-Left:   \033[1;5D
URxvt.keysym.C-Right:  \033[1;5C
URxvt.keysym.Home:     \033[H
URxvt.keysym.End:      \033[F
END
