#!/usr/bin/perl -w

use strict;
use Convert::Color::HUSL;

my @colors = (
	[foreground =>   0,   0, 95],
	[background => 270,   3,  9],
	[color0     =>   0,   0, 16],   # Black   Cursorline
	[color1     =>  11, 100, 59],   # Red     Error
	[color2     => 126, 100, 59],   # Green   --
	[color3     =>  52, 100, 79],   # Gold    --
	[color4     => 243, 100, 59],   # Blue    --
	[color5     => 336, 100, 59],   # Magenta --
	[color6     => 144, 100, 59],   # Cyan    --
	[color7     =>   0,   0, 99],   # White   --
	[color8     => 215,  34, 59],   # Black   Comments
	[color9     =>  20, 100, 59],   # Orange  Todo
	[color10    => 126, 100, 79],   # Green   Menus
	[color11    =>  52, 100, 79],   # Yellow  Keywords
	[color12    => 243, 100, 79],   # Blue    String
	[color13    => 272, 100, 59],   # Purple  PreProc
	[color14    => 144, 100, 79],   # Cyan    --
	[color15    =>   0,   0, 79],   # Gray    --
);

sub hsl2rgb { map int(255.5 * $_), Convert::Color::HUSL->new(@_)->rgb() }
print <DATA>;
printf "*%s: #%02x%02x%02x\n", shift @$_, hsl2rgb(@$_) for @colors;

__DATA__
! Main settings
xterm*termName:        xterm-256color
xterm*saveLines:       65535
xterm*showBlinkAsBold: true
xterm*scrollBar:       false
xterm*charClass:       45-47:48,58:48,126:48

! Key mappings
xterm.VT100.translations: #override \
	Ctrl<Key>BackSpace:   string("\033\177")\n\
	Shift<Key>exclam:     string(0x5c)\n\
	Shift<Key>parenright: string("|")\n\
	Shift<Key>asterisk:   string("#")

! Font
xterm*faceName:    Hack
xterm*faceSize:    11
xterm*scaleHeight: 1.00
Xft.antialias:     1
Xft.autohint:      1
Xft.hinting:       0
Xft.hintstyle:     hintfull
Xft.rgba:          rgb
